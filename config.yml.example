# 输入文件配置
input:
  excel_file: "path/to/your/input.xlsx"  # 输入的Excel文件路径

# 输出文件配置
output:
  pdf_file: "output.pdf"     # 输出的PDF文件路径

# 卡片内容配置
card:
  album_name: "专辑名称"
  additional_info:           # 额外信息，每行一个
    - "兑换网址: https://www.dizzylab.net/redeem"

# 布局配置
layout:
  grid:
    columns: 3              # 每行卡片数量
    rows: 4                # 每页行数
  card:
    width: 6               # 卡片宽度(cm)
    height: 4              # 卡片高度(cm)
    margin: 1              # 页面边距(cm)
    font_size: 10          # 字体大小 